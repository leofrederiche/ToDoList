<h1>Lista de afazeres</h1>

<% @lists.each do |list| %>
	<div class="list">
	<p><%= link_to "#{list.name}", show_list_path(list.id), id: "title" %></p>
	<%= link_to "+", new_item_path(list.id), id: "add" %>
	
		<% list.items.each do |items| %>
			<ul>
				<li><%= items.description %></li>
			</ul>
		<% end %>
	</div>
<% end %>